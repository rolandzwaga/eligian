// Test file for block label decorations
// You should see "⌃start" and "⌄end" labels before the brackets

endable action fadeIn(selector: string, duration: number) [
  selectElement(selector)
  setStyle({opacity: 0})
] [
  animate({opacity: 1}, duration)
]

endable action slideIn(selector: string) [
  selectElement(selector)
  setStyle({transform: "translateX(-100%)"})
] [
  animate({transform: "translateX(0)"}, 500)
]

timeline "Test" in "#container" using raf {
  at 0s..4s [
    log("start operations")
    showElement("#slide1")
  ] [
    log("end operations")
    hideElement("#slide1")
  ]
  
  at 4s..8s [
    fadeIn("#slide2", 1000)
  ] []
}
