// US6 Scoping Test - Variables declared in one branch shouldn't leak to another

action testIfElseScoping [
  if (1 > 0) {
    const foo = "bar"
    selectElement(foo)  // OK - foo is in scope
  } else {
    selectElement(foo)  // ERROR - foo not in scope here
  }
]

action testForLoopScoping [
  for (item in ["a", "b"]) {
    const temp = "value"
    setText(temp)  // OK - temp is in scope
  }
  setText(temp)  // ERROR - temp not in scope outside loop
]

timeline "test" in "#c" using raf {
  at 0s..1s {
    testIfElseScoping()
    testForLoopScoping()
  }
}
