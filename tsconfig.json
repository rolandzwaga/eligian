{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": [
      "ES2020"
    ],
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "incremental": true,
    "skipDefaultLibCheck": true
  },
  "exclude": [
    "**/lib/**/*",
    "**/out/**/*",
    "**/node_modules/**/*",
    "**/__tests__/**/*",
    "**/__fixtures__/**/*"
  ]
}