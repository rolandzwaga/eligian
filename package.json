{
  "name": "eligian",
  "description": "Base workspace package",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "pnpm -r clean",
    "watch": "tsc -b tsconfig.build.json --watch",
    "build": "pnpm -r build",
    "build:clean": "pnpm clean && pnpm build",
    "langium:generate": "pnpm --filter @eligian/language langium:generate",
    "langium:watch": "pnpm --filter @eligian/language langium:watch",
    "test": "pnpm -r test",
    "test:coverage:ci": "pnpm -r test:coverage:ci",
    "test:coverage": "tsx tools/pruned-coverage.ts",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "ci": "biome ci .",
    "typecheck": "tsc -b tsconfig.build.json"
  },
  "dependencies": {
    "effect": "3.19.8",
    "eligius": "1.5.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/node": "24.10.1",
    "@vitest/coverage-v8": "3.2.4",
    "esbuild": "0.27.0",
    "shx": "0.4.0",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a"
}
