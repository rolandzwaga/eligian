{
    "name": "eligian",
    "description": "Base workspace package",
    "version": "0.0.1",
    "type": "module",
    "private": true,
    "scripts": {
        "clean": "pnpm -r clean",
        "watch": "tsc -b tsconfig.build.json --watch",
        "build": "pnpm -r build",
        "build:clean": "pnpm clean && pnpm build",
        "langium:generate": "pnpm --filter @eligian/language langium:generate",
        "langium:watch": "pnpm --filter @eligian/language langium:watch",
        "test": "pnpm --filter @eligian/language test",
        "test:coverage:ci": "pnpm --filter @eligian/language test:coverage:ci",
        "test:coverage": "tsx tools/pruned-coverage.ts",
        "lint": "biome lint .",
        "format": "biome format --write .",
        "check": "biome check --write .",
        "ci": "biome ci .",
        "typecheck": "tsc -b tsconfig.build.json"
    },
    "dependencies": {
        "effect": "3.19.4",
        "eligius": "1.5.0"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.6",
        "@types/node": "24.10.1",
        "@vitest/coverage-v8": "3.2.4",
        "esbuild": "0.27.0",
        "shx": "0.4.0",
        "tsx": "4.20.6",
        "typescript": "5.9.3",
        "vite-tsconfig-paths": "5.1.4",
        "vitest": "3.2.4"
    },
    "packageManager": "pnpm@10.22.0+sha512.bf049efe995b28f527fd2b41ae0474ce29186f7edcb3bf545087bd61fbbebb2bf75362d1307fda09c2d288e1e499787ac12d4fcb617a974718a6051f2eee741c"
}
