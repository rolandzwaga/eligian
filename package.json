{
    "name": "eligian",
    "description": "Base workspace package",
    "version": "0.0.1",
    "type": "module",
    "private": true,
    "scripts": {
        "clean": "pnpm -r clean",
        "watch": "tsc -b tsconfig.build.json --watch",
        "build": "pnpm -r build",
        "build:clean": "pnpm clean && pnpm build",
        "langium:generate": "pnpm --filter @eligian/language langium:generate",
        "langium:watch": "pnpm --filter @eligian/language langium:watch",
        "test": "pnpm --filter @eligian/language test",
        "test:coverage:ci": "pnpm --filter @eligian/language test:coverage:ci",
        "test:coverage": "tsx tools/pruned-coverage.ts",
        "lint": "biome lint .",
        "format": "biome format --write .",
        "check": "biome check --write .",
        "ci": "biome ci .",
        "typecheck": "tsc -b tsconfig.build.json"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.2",
        "@types/node": "24.9.2",
        "@vitest/coverage-v8": "3.2.4",
        "shx": "0.4.0",
        "typescript": "5.9.3",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd"
}
