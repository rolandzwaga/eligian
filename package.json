{
    "name": "eligian",
    "description": "Base workspace package",
    "version": "0.0.1",
    "type": "module",
    "private": true,
    "scripts": {
        "clean": "pnpm -r clean",
        "watch": "tsc -b tsconfig.build.json --watch",
        "build": "tsc -b tsconfig.build.json && pnpm -r build",
        "build:clean": "pnpm clean && pnpm build",
        "langium:generate": "pnpm --filter @eligian/language langium:generate",
        "langium:watch": "pnpm --filter @eligian/language langium:watch",
        "test": "pnpm --filter @eligian/language test",
        "test:coverage:ci": "vitest run --coverage",
        "test:coverage": "tsx tools/pruned-coverage.ts",
        "lint": "biome lint .",
        "format": "biome format --write .",
        "check": "biome check --write .",
        "ci": "biome ci .",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "@biomejs/biome": "2.2.6",
        "@types/node": "24.8.1",
        "@vitest/coverage-v8": "3.2.4",
        "shx": "0.4.0",
        "typescript": "5.9.3",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8"
}
