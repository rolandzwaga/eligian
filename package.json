{
  "name": "eligian",
  "description": "Base workspace package",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "pnpm -r clean",
    "watch": "tsc -b tsconfig.build.json --watch",
    "build": "pnpm -r build",
    "build:clean": "pnpm clean && pnpm build",
    "langium:generate": "pnpm --filter @eligian/language langium:generate",
    "langium:watch": "pnpm --filter @eligian/language langium:watch",
    "test": "pnpm -r test",
    "test:coverage:ci": "pnpm -r test:coverage:ci",
    "test:coverage": "tsx tools/pruned-coverage.ts",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "ci": "biome ci .",
    "typecheck": "tsc -b tsconfig.build.json"
  },
  "dependencies": {
    "effect": "3.19.6",
    "eligius": "1.5.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@types/node": "24.10.1",
    "@vitest/coverage-v8": "3.2.4",
    "esbuild": "0.27.0",
    "shx": "0.4.0",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
}
