{
  "name": "eligian",
  "description": "Base workspace package",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "pnpm -r clean",
    "watch": "tsc -b tsconfig.build.json --watch",
    "build": "pnpm -r build",
    "build:clean": "pnpm clean && pnpm build",
    "langium:generate": "pnpm --filter @eligian/language langium:generate",
    "langium:watch": "pnpm --filter @eligian/language langium:watch",
    "generate:html-metadata": "tsx scripts/generate-html-metadata.ts",
    "test": "pnpm -r test",
    "test:coverage:ci": "pnpm -r test:coverage:ci",
    "test:coverage": "tsx tools/pruned-coverage.ts",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "ci": "biome ci .",
    "typecheck": "tsc -b tsconfig.build.json"
  },
  "dependencies": {
    "effect": "3.19.11",
    "eligius": "2.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/node": "24.10.1",
    "@vitest/coverage-v8": "4.0.15",
    "esbuild": "0.27.1",
    "shx": "0.4.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "4.0.15"
  },
  "packageManager": "pnpm@10.25.0+sha512.5e82639027af37cf832061bcc6d639c219634488e0f2baebe785028a793de7b525ffcd3f7ff574f5e9860654e098fe852ba8ac5dd5cefe1767d23a020a92f501"
}
