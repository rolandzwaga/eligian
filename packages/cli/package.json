{
  "name": "@eligian/cli",
  "description": "Eligian DSL compiler CLI and library - compile .eligian files to Eligius JSON",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=10.2.3"
  },
  "files": [
    "dist",
    "out"
  ],
  "main": "./dist/index.mjs",
  "types": "./out/index.d.ts",
  "exports": {
    ".": {
      "types": "./out/index.d.ts",
      "default": "./dist/index.mjs"
    }
  },
  "bin": {
    "eligian": "./dist/cli.mjs",
    "eligian-cli": "./dist/cli.mjs"
  },
  "scripts": {
    "clean": "shx rm -fr *.tsbuildinfo out dist",
    "build": "node esbuild.mjs && tsc -p tsconfig.json --emitDeclarationOnly",
    "build:clean": "pnpm run clean && pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@eligian/language": "workspace:*",
    "chalk": "5.6.2",
    "commander": "14.0.2"
  }
}
