{
  "name": "eligian",
  "scopeName": "source.eligian",
  "fileTypes": ["eligian"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.eligian",
      "match": "\\b(action|at|audio|context|custom|endable|false|from|globaldata|h|m|ms|null|operationdata|raf|s|timeline|true|using|video)\\b"
    },
    {
      "name": "string.quoted.double.eligian",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    },
    {
      "name": "string.quoted.single.eligian",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    },
    {
      "name": "punctuation.bracket.square.eligian",
      "match": "\\[|\\]"
    },
    {
      "name": "punctuation.bracket.round.eligian",
      "match": "\\(|\\)"
    },
    {
      "name": "punctuation.bracket.curly.eligian",
      "match": "\\{|\\}"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.eligian",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.eligian"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.eligian"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.eligian"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.eligian"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.eligian",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
