{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://eligius.dev/schemas/language-labels.json",
  "title": "Eligius Language Labels",
  "description": "JSON Schema for validating ILanguageLabel[] from Eligius library. This schema MUST match the TypeScript interfaces: ILanguageLabel (label group) and ILabel (translation). Array of label groups with translations in multiple languages for internationalization support.",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique identifier for this label group",
        "minLength": 1
      },
      "labels": {
        "type": "array",
        "description": "Array of label translations for different languages",
        "minItems": 1,
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "Unique identifier for this translation",
              "minLength": 1
            },
            "languageCode": {
              "type": "string",
              "description": "Language code (e.g., en-US, nl-NL, fr-FR)",
              "minLength": 2
            },
            "label": {
              "type": "string",
              "description": "The translated label text",
              "minLength": 1
            }
          },
          "required": ["id", "languageCode", "label"],
          "additionalProperties": true
        }
      }
    },
    "required": ["id", "labels"],
    "additionalProperties": true
  }
}
