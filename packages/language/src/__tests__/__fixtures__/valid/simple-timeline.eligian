// Simple timeline with basic events using new syntax
endable action showTitle [
  selectElement("#title")
  addClass("visible")
] [
  removeClass("visible")
]

endable action showSubtitle [
  selectElement("#subtitle")
  addClass("visible")
] [
  removeClass("visible")
]

timeline "main" using video from "presentation.mp4" {
  at 0s..5s {
    showTitle()
  }

  at 2s..7s {
    showSubtitle()
  }

  at 120s..125s [
    selectElement("#title")
    removeClass("visible")
  ] [
    selectElement("#title")
    addClass("hidden")
  ]
}
