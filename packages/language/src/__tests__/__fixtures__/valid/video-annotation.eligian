// Video annotation example
timeline video from "lecture.mp4"

// Chapter markers
event chapter1 at 0..30 {
  show #chapter1-title
  trigger showNotes
}

event chapter2 at 30..90 {
  hide #chapter1-title
  show #chapter2-title
}

event chapter3 at 90..150 {
  hide #chapter2-title
  show #chapter3-title
  animate #diagram with slideIn(500, "bottom")
}

event conclusion at 150..180 {
  hide #chapter3-title
  show #conclusion
}
