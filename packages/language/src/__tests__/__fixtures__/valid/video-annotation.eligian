// Video annotation example using new syntax

// Chapter marker actions
endable action showChapter1 [
  selectElement("#chapter1-title")
  addClass("visible")
] [
  removeClass("visible")
]

endable action showChapter2 [
  selectElement("#chapter2-title")
  addClass("visible")
] [
  removeClass("visible")
]

endable action showChapter3 [
  selectElement("#chapter3-title")
  addClass("visible")
  selectElement("#diagram")
  addClass("slide-in")
] [
  removeClass("visible")
]

timeline "lecture" in ".video-container" using video from "lecture.mp4" {
  at 0s..30s {
    showChapter1()
  }

  at 30s..90s {
    showChapter2()
  }

  at 90s..150s {
    showChapter3()
  }

  at 150s..180s [
    selectElement("#conclusion")
    addClass("visible")
  ] [
    removeClass("visible")
  ]
}
