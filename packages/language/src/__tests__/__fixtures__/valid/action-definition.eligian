// DSL with reusable action definitions using new syntax

// Define reusable endable actions
endable action fadeIn [
  selectElement(".target")
  setStyle({ opacity: 0 })
  animate({ opacity: 1 }, 500)
] [
  setStyle({ opacity: 0 })
]

endable action fadeOut [
  selectElement(".target")
  setStyle({ opacity: 1 })
] [
  animate({ opacity: 0 }, 500)
]

// Regular action (not timeline-bound)
action highlightElement [
  selectElement(".highlight")
  addClass("active")
]

timeline "main" using raf {
  at 0s..5s {
    fadeIn()
  }

  at 10s..15s {
    fadeOut()
  }
}
