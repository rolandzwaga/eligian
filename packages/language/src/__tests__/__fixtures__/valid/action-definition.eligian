// DSL with reusable action definitions
timeline raf

// Define reusable actions
action fadeIn(element, duration = 500) {
  on element {
    addClass("fade-in")
    animate(duration)
  }
}

action fadeOut(element, duration = 500) {
  on element {
    addClass("fade-out")
    animate(duration)
  }
}

// Use actions in events
event intro at 0..5 {
  fadeIn(#title, 800)
  fadeIn(#subtitle, 600)
}

event outro at 10..15 {
  fadeOut(#title, 400)
  fadeOut(#subtitle, 400)
}
